<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#143be0"
    android:orientation="vertical"
    tools:context="com.ziac.splashapp.MainActivity">

    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Large.Circle"

        android:layout_gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginTop="180dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:SpinKit_Color="#C0C0C0"
        android:layout_marginLeft="40dp" />





        <TextView

            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="190dp"
            android:layout_toEndOf="@+id/spin_kit"

            android:text="Spalsh"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:textStyle="bold"


            tools:ignore="HardcodedText"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/spin_kit" />




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Please Wait..."
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="90dp"
       />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="A world of great colors is loading"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        />



</RelativeLayout>