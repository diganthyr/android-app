<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mobileNumber"
    android:orientation="vertical"
    android:background="@drawable/splashbg2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nearly there,"

        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_marginTop="150dp"
        android:layout_marginStart="35dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set New Password"
         android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"

        />

    <EditText

        android:id="@+id/mno"
        android:hint="      New Password"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:ems="23"

        android:textSize="20sp"
        android:background="@drawable/boxshape"
        android:inputType="textPhonetic"

        />
    <EditText

        android:id="@+id/cpass"
        android:hint="     confirm New Password"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:ems="23"

        android:textSize="20sp"
        android:background="@drawable/boxshape"
        android:inputType="textPhonetic"

        />



    <Button
        android:id="@+id/cngpass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="240dp"
        android:textSize="20sp"
        android:text="Change Password"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:background="@drawable/btnshape"
        tools:ignore="HardcodedText"
        />

    <TextView
        android:id="@+id/cnglogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Return Back to Sign in"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textColor="#000000"

        />
</LinearLayout>